@inherits Umbraco.Web.Mvc.UmbracoViewPage<UmbracoTwenty.Models.ArticleViewModel>
@{
    Layout = "Base.cshtml";
}
@section BodyClass {left-sidebar }
@section ContentArea
{
<!-- Main -->
<article id="main">

    <header class="special container">
        <span class="icon fa-laptop"></span>
        <h2>@Html.Raw(Model.Title)</h2>
        <p>@Html.Raw(Model.Subtitle)</p>
    </header>

    <!-- One -->
    <section class="wrapper style4 container">

        <div class="row oneandhalf">
            <div class="4u">

                <!-- Sidebar -->
                <div class="sidebar">
                    @Html.Partial("Callouts", Model.ArticleCallouts)
                </div>

            </div>
            <div class="8u skel-cell-important">

                <!-- Content -->
                <div class="content">
                    <section>
                        <a href="#" class="image featured"><img src="/images/pic02.jpg" alt="" /></a>
                        <header>
                            <h3>Dolore Amet Consequat</h3>
                        </header>
                        @Html.Raw(Model.Body)
                    </section>
                </div>

            </div>
        </div>
    </section>

    @Html.CachedPartial("Callouts", Model.Callouts, 3600)

</article>


}